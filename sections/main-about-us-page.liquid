
<div class="justify-center flex-1 max-w-6xl py-4 mx-auto lg:py-6 md:px-6">
    <div class="flex flex-wrap ">
        <div class="w-full px-4 mb-10 lg:w-1/2 lg:mb-0">
            <div class="relative lg:max-w-md">
                <img src="{{ section.settings.about_us_image_picker | img_url: 'master' }}"
                    class="relative z-10 object-cover w-full rounded h-96">
                <div class="absolute bottom-0 right-0 z-10 p-8 bg-dark border-4 border-mdew rounded shadow lg:-mb-8 lg:-mr-11 sm:p-8">
                    <p class="text-lg font-semibold md:w-72">
                        {%  render 'icon-quote-mark' %}
                        <p class="text-white font-montserrat">{{ section.settings.about_details_text }}</p>
                    </p>
                </div>
            </div>
        </div>
        <div class="w-full px-6 mb-10 lg:w-1/2 lg:mb-0 ">
            <div class="pl-4 mb-6 border-l-4 border-mdew2">
                <span class="text-sm text-mdew uppercase font-montserrat">{{ section.settings.who_we_are_title_text }}</span>
                <h1 class="mt-2 text-3xl font-black text-mdew md:text-5xl font-bebas">
                    {{ section.settings.about_us_title_text }}
                </h1>
            </div>
            <p class="mb-6 text-base leading-7 text-white font-montserrat">
                {{ page.content }}
            </p>
            <a href="/"
                class="px-4 py-2 text-dark bg-mdew rounded hover:bg-mdew2 font-bebas">
                Home Page
            </a>
        </div>
    </div>
</div>


{% schema %}
    {
        "name": "About Us",
        "class": "about_us flex items-center bg-dark mt-24",
        "settings": [
            {
                "type": "image_picker",
                "id": "about_us_image_picker",
                "label": "Image"
            },{
                "type": "text",
                "id": "who_we_are_title_text",
                "label": "Who we are Title"
            }, {
                "type": "text",
                "id": "about_us_title_text",
                "label": "About Us Title"
            }, {
                "type": "textarea",
                "id": "about_details_text",
                "label": "Image info Text"
            }
        ]
    }
{% endschema %}