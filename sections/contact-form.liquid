<div class="flex justify-center mx-[5vw]">
  <div class="max-w-xs text-mdew">
    <h1 class="font-bebas text-3xl">{{ section.settings.support_title_text }}</h1>
    <p class="font-montserrat">{{ section.settings.support_details_text }}</p>
  </div>
  <div class="">
    <div class="text-mdew mb-8">
      <h1 class="font-bebas text-3xl">{{ section.settings.contact_title_text }}</h1>
      <p class="font-montserrat">{{ section.settings.contact_details_text }}</p>
    </div>

    <div class="text-mdew">
      {% form 'contact' %}
        {{ form.errors | default_errors }}
      
        <div class="relative">
          <input type="text" name="contact[first-name]" id="first-name" class="block px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 bg-transparent rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " />
          <label for="first-name" class="absolute text-sm text-mdew duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] px-2 peer-focus:px-2 peer-focus:text-mdew peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 left-1">First Name</label>
        </div>

        <div class="last-name">
          <label class="" for="last-name">Last name</label>
          <input type="text" name="contact[last_name]" id="last-name" />
        </div>
      
        <div class="phone">
          <label class="" for="phone">Phone</label>
          <input type="tel" name="contact[phone]" id="phone" />
        </div>
      
        <div class="email">
          <label class="" for="email">Email</label>
          <input type="email" name="contact[email]" id="email" />
        </div>
      
        <div class="message">
          <label class="" for="message">Message</label>
          <textarea name="contact[body]" id="message"></textarea>
        </div>
      
        <div class="submit">
          <input type="submit" value="Create" />
        </div>
      {% endform %}
    </div>
    
  </div>
</div>

{% schema %}
  {
    "name": "Contact Form",
    "class": "contact_form my-12",
    "settings": 
    [
      {
        "type": "text",
        "id": "support_title_text",
        "label": "Support Title"
      }, {
        "type": "textarea",
        "id": "support_details_text",
        "label": "Support Text"
      }, {
        "type": "text",
        "id": "contact_title_text",
        "label": "Contact Title"
      }, {
        "type": "textarea",
        "id": "contact_details_text",
        "label": "Contact Text"
      }
    ]
  }
{% endschema %}
