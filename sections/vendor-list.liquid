<style>
  .vendor_list .swiper-slide a {
    width: 100%;
    height: 100%;
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

<!-- Include Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css">

<div class="">
  {% if section.settings.vendor-list-title != blank %}
    <h3 class="text-center text-white">{{ section.settings.vendor-list-title }}</h3>
  {% endif %}
</div>
<div class="mySwiper swiper h-44">
  <div class="wrapper swiper-wrapper ">

    <!-- Apple -->
    <div class="swiper-slide bg-timberwolf rounded-md">
      <p class="h-full w-full flex items-center justify-center">{{ 'Apple' | link_to_vendor }}</p>
    </div>

    <!-- Alien Ware -->
    <div class="swiper-slide bg-timberwolf rounded-md">
      <p class="h-full w-full flex items-center justify-center">{{ 'Alien Ware' | link_to_vendor }}</p>
    </div>

    <!-- Asus Rog -->
    <div class="swiper-slide bg-timberwolf rounded-md">
      <p class="h-full w-full flex items-center justify-center">{{ 'ASUS ROG' | link_to_vendor }}</p>
    </div>

    <!-- 4 -->
    <div class="swiper-slide bg-timberwolf rounded-md">
      <p class="h-full w-full flex items-center justify-center">{{ '4' | link_to_vendor }}</p>
    </div>

    <!-- 5 -->
    <div class="swiper-slide bg-timberwolf rounded-md">
      <p class="h-full w-full flex items-center justify-center">{{ '5' | link_to_vendor }}</p>
    </div>

    <!-- 6 -->
    <div class="swiper-slide bg-timberwolf rounded-md">
      <p class="h-full w-full flex items-center justify-center">{{ '6' | link_to_vendor }}</p>
    </div>

    <!-- 7 -->
    <div class="swiper-slide bg-timberwolf rounded-md">
      <p class="h-full w-full flex items-center justify-cetner">{{ '7' | link_to_vendor }}</p>
    </div>

  </div>
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-pagination"></div>
</div>


<!-- Include Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script>
  var swiper = new Swiper(".mySwiper", {
    slidesPerView: 3,
    spaceBetween: 30,
    freeMode: true,
    loop: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: false
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev"
    }
  });
</script>

{% schema %}
  {
    "name": "Vendor List",
    "class": "vendor_list bg-dark-cyan h-60 py-10 px-5",
    "settings": [
      {
        "type": "text",
        "id": "vendor-list-title",
        "label": "Title"
      }
    ],
    "presets": [
      {
        "name": "Vendor List"
      }
    ]
  }
{% endschema %}



{% comment %} {% for vendor in shop.vendors %}
{{- vendor | link_to_vendor }}
{% endfor %} {% endcomment %}