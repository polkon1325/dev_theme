                "id": "third_image_picker",
                "label": "Top Right Image"
            }, {
                "type": "image_picker",
                "id": "fourth_image_picker",
                "label": "Bottom Right Image"
            }, {
                "type": "text",
                "id": "why_choose_us",
                "label": "Why choose us"
            }, {
                "type": "text",
                "id": "why_choose_us_title_text",
                "label": "Why choose us Title"
            }, {
                "type": "text",
                "id": "why_choose_us_text",
                "label": "Why choose us Text"
            }, {
                "type": "text",
                "id": "first_bullet_text",
                "label": "First Bullet Text"
            }, {
                "type": "text",
                "id": "second_bullet_text",
